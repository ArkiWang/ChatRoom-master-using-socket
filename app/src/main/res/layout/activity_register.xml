<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yueli.myapplication.RegisterActivity">

    <EditText
        android:id="@+id/Register_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/Register_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Register_mail"
        android:layout_alignRight="@+id/Register_mail"
        android:layout_below="@+id/Register_mail"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/Ensure_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Register_pw"
        android:layout_alignStart="@+id/Register_pw"
        android:layout_below="@+id/Register_pw"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/Register_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Ensure_pw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Button" />
</RelativeLayout>
